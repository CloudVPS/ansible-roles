# Build by ansible, please do not edit manually
# Unison preferences file {{ item.name }}
# Roots of the synchronization
root = {{ item.master_dir }}
root = ssh://{{ item.slave_ip }}/{{ item.slave_dir }}

# Some regexps specifying names and paths to ignore
#ignore = Path stats    ## ignores /var/www/stats
#ignore = Path stats/*  ## ignores /var/www/stats/*
#ignore = Path */stats  ## ignores /var/www/somedir/stats, but not /var/www/a/b/c/stats
#ignore = Name *stats   ## ignores all files/directories that end with "stats"
#ignore = Name stats*   ## ignores all files/directories that begin with "stats"
#ignore = Name *.tmp    ## ignores all files with the extension .tmp

{% if item.ignoredpaths is defined %}
{% for ignoredpath in item.ignoredpaths %}
ignore = Path {{ ignoredpath }}
{% endfor %}
{% endif %}

ignore = Name {.git}
ignore = Name {.svn}
ignore = Name {.hg}
ignore = Name {.Trash}
ignore = Name {*.cache}
ignore = Name {*.o}
ignore = Name {.tmp}
ignore = Name {.DS_Store}
ignore = Name {*.localized}
ignore = Name {*.log}
ignore = Name {*.Caches}
ignore = Name {*.tmp}
ignore = Name {*.Cache}
ignore = Name *~
ignore = Name .*~
ignore = Name {*.torrent}
ignore = Name *.hazeldb
ignore = Name *.bashrc
ignore = Name *.bash_logout
ignore = Name *.profile

auto=true
batch=true
fastcheck=true
group=true
owner=true
prefer=newer
#silent=true
times=true
